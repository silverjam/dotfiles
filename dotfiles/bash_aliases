j-vid-to-gif () {

    local FUNC_USAGE="Usage: ${FUNCNAME[0]} <input.mov> <output.gif>" 

    : ${1?$FUNC_USAGE}
    : ${2?$FUNC_USAGE}

    ffmpeg -i "$1" -vf scale=800:-1 -r 10 -f image2pipe -vcodec ppm - |\
    convert -delay 5 -layers Optimize -loop 0 - "$2"
}

